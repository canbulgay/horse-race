{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@assets/*": ["./src/assets/*"],
      "@horses/*": ["./src/modules/horses/*"],
      "@horses": ["./src/modules/horses/index.ts"],
      "@racing/*": ["./src/modules/racing/*"],
      "@racing": ["./src/modules/racing/index.ts"]
    }
  }
}
